# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# snboard
GET     /list                       controllers.Application.list
GET     /card/:id                   controllers.Application.card(id: Long)
GET     /register                   controllers.Application.register
POST    /register                   controllers.Application.regCard
GET     /modify/:id                 controllers.Application.modify(id: Long)
GET     /delete/:id                 controllers.Application.delete(id: Long)